<div class="transactions">
  <div class="nav-area">
    <%= link_to groups_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h2><%= @group.name %> Transactions</h2>
    Total Amount: <%= @total_amount %>
  </div>

  <div>
    <% @group.deals.order(created_at: :desc).each do |deal| %>
      <%= render deal %>
    <% end %>
  </div>

  <%= link_to "Add a new transaction", new_group_deal_path(@group), class: "btn" %>

</div>
