<div class="transactions">
  <div class="nav-area">
    <div class="back-icon">
      <%= link_to groups_path do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
    </div>
    <div class="nav-details">
      <h2><%= @group.name %> Transactions</h2>
      <p>Total Amount: <%= @total_amount %></p>
    </div>
  </div>

  <div class="deals-list">
    <% @group.deals.order(created_at: :desc).each do |deal| %>
      <%= render deal %>
    <% end %>
  </div>

  <button class="logins">
   <%= link_to "Add new transaction", new_group_deal_path(@group), class: "btn" %>
  </button>
</div>
